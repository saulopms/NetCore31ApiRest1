@model AlterData.Models.Voto

@{
    ViewData["Title"] = "Create";
}

<h1>Votação</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">

                <label class="control-label">Recurso</label>

                <select asp-for="idrecurso"
                        asp-items="@ViewBag.Recursos" class="form-control"></select>

            </div>

            <div class="form-group">

                <label asp-for="comentario" class="control-label"></label>
                <input asp-for="comentario" class="form-control" />
                <span asp-validation-for="comentario" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="submit" value="Votar!" class="btn btn-primary" />
            </div>

            <div>@ViewBag.Mensagem</div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ver resultados</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
